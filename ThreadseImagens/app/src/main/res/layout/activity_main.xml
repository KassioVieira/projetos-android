<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.vieira.kassio.threadseimagens.MainActivity">


   <ImageButton
       android:id="@+id/btnPower"
       android:layout_width="80dp"
       android:layout_height="80dp"
       android:layout_gravity="center"
       android:background="@drawable/power1"/>

    <ImageView
        android:id="@+id/imgLamp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/apagada"/>

    <ImageView
        android:id="@+id/imageBatery"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/baterryloaded"/>

</LinearLayout>
